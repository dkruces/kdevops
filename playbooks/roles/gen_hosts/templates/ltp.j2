[all]
localhost ansible_connection=local
{% for s in ltp_enabled_hosts %}
{{ kdevops_host_prefix }}-{{ s }}
{% if kdevops_baseline_and_dev %}
{{ kdevops_host_prefix }}-{{ s }}-dev
{% endif %}
{% endfor %}
[all:vars]
ansible_python_interpreter =  "{{ kdevops_python_interpreter }}"

[baseline]
{% if not skip_bringup %}
{% for s in ltp_enabled_hosts %}
{{ kdevops_host_prefix }}-{{ s }}
{% endfor %}
{% else %}
localhost ansible_connection=local
{% endif %}
[baseline:vars]
ansible_python_interpreter =  "{{ kdevops_python_interpreter }}"

[dev]
{% if kdevops_baseline_and_dev %}
  {% for s in ltp_enabled_hosts %}
{{ kdevops_host_prefix }}-{{ s }}-dev
  {% endfor %}
{% endif %}
[dev:vars]
ansible_python_interpreter =  "{{ kdevops_python_interpreter }}"
